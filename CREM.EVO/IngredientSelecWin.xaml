<Window x:Class="CREM.EVO.IngredientSelecWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IngredientSelecWin" Height="150" Width="300" WindowStyle="None">
    <Viewbox Stretch="Fill" >
        <Grid Height="900" Width="1200">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.3*"/>
                
            </Grid.RowDefinitions>
            <TextBlock FontSize="80" VerticalAlignment="Center" HorizontalAlignment="Center">Ingredient Selection</TextBlock>
            <ComboBox  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="comport" Grid.Row="1" Margin="200,50" FontSize="56" SelectionChanged="comport_SelectionChanged" >
                <ComboBoxItem>Espresso</ComboBoxItem>
                <ComboBoxItem>FilterBrew</ComboBoxItem>
                <ComboBoxItem>InstantPowder</ComboBoxItem>
                <ComboBoxItem>FreshMilk</ComboBoxItem>
                <ComboBoxItem>Water</ComboBoxItem>
            </ComboBox>
            <Button Grid.Row="2" Content="Cancel" FontSize="36" Height="190" Margin="200,72,658,93" Click="Button_Click_1"/>
            <Button x:Name="BtnOk" Grid.Row="2" Content="OK" FontSize="36" Height="190" Margin="664,72,200,93" Click="Button_Click"/>
        </Grid>
    </Viewbox>
</Window>
